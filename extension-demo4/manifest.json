{
	"manifest_version": 2,
	"name": "Chrome插件demo",
	"version": "1.0",
	"description": "最简单的Chrome插件demo，需要快速做一个简单的插件时可以基于这个仓库开发",
	"author": "sxei",
	"icons": {
		"48": "icon.png",
		"128": "icon.png"
	},
	// 当某些特定页面打开才显示的图标
	"page_action": {
		"default_icon": "icon.png",
		"default_title": "我是pageAction",
		"default_popup": "popup.html"
	},
	// 权限申请
	"permissions": [
		"declarativeContent",
		"notifications", // 通知
		"webRequest" // web请求
	],
	"background": {
		"scripts": ["js/background.js"]
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["js/jquery-1.8.3.js", "js/content-script.js"]
	}],
	"web_accessible_resources": [
		"inject.js"
	]
}